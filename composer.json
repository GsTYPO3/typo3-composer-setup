{
    "name": "helhum/typo3-composer-setup",
    "description": "Set up required entry points for TYPO3 web directory",
    "type": "library",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "info@helhum.io",
            "homepage": "https://helhum.io",
            "role": "Developer"
        }
    ],
    "require": {
        "typo3/cms-composer-installers": "^1.4",
        "typo3/cms-backend": "^7.6 || ^8.7",
        "typo3/cms-core": "^7.6 || ^8.7",
        "typo3/cms-cshmanual": "^7.6 || ^8.7",
        "typo3/cms-extbase": "^7.6 || ^8.7",
        "typo3/cms-extensionmanager": "^7.6 || ^8.7",
        "typo3/cms-filelist": "^7.6 || ^8.7",
        "typo3/cms-fluid": "^7.6 || ^8.7",
        "typo3/cms-frontend": "^7.6 || ^8.7",
        "typo3/cms-install": "^7.6 || ^8.7",
        "typo3/cms-lang": "^7.6 || ^8.7",
        "typo3/cms-recordlist": "^7.6 || ^8.7",
        "typo3/cms-saltedpasswords": "^7.6 || ^8.7",
        "typo3/cms-sv": "^7.6 || ^8.7"
    },
    "suggest": {
        "helhum/typo3-console": "TYPO3 Console is highly recommended for any TYPO3 composer setup.",
        "typo3/cms-t3skin": "When using typo3/cms 7.6, you need to require typo3/cms-t3skin as well."
    },
    "require-dev": {
        "typo3/cms": "dev-TYPO3_8-7 as 8.7.5",
        "typo3-console/php-server-command": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "Helhum\\Typo3ComposerSetup\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "web"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
